generator client {
  provider = "prisma-client-js"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model Module {
  id         String @id @default(cuid())
  name       String
  semesterId String
  lessonId   String
  gradeId    String
  subModules  SubModule[]
}

model SubModule {
  id       String @id @default(cuid())
  name     String
  moduleId String
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

model Document {
  id          String @id @default(cuid())
  richText    String
  image       String[]
  subModuleId String
  moduleId    String
  teacherId   String
  
}

model User {
  id        String  @id @default(cuid())
  name      String
  role      String
  lessonId  String?
  password  String
  schoolId  String?
  number    Int    @unique
}

model Lesson {
  id   String @id @default(cuid())
  name String
}
