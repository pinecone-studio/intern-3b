generator client {
  provider = "prisma-client-js"
  
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Module {
  id         String @id @default(cuid())
  name       String
  semesterId String
  lessonId   String
  gradeId    String
}

model SubModule {
  id       String @id @default(cuid())
  name     String
  moduleId String
}

model Document {
  id          String @id @default(cuid())
  richText    String
  image       String[]
  subModuleId String
  moduleId    String
  teacherId   String
  
}

model User {
  id        String  @id @default(cuid())
  name      String
  role      String
  lessonId  String?
  password  String
  schoolId  String?
  number    Int    @unique
}

model Lesson {
  id   String @id @default(cuid())
  name String
}
